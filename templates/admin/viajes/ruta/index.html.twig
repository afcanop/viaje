{% extends "bases/base_admin.html.twig" %}
{% block title %}Ruta Lista{% endblock %}
{% block body %}
    <div class="section-header">
        <h4><i>Ruta</i></h4>
        <div class="section-header-breadcrumb">
            <a href="{{ path('ruta_nuevo') }}" class="btn" title="nuevo Registro">
                <img class="icon" src="https://img.icons8.com/nolan/45/create-new.png"/>
            </a>
        </div>
    </div>
    <div class="section-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Lista</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-invoice">
                            <table class="table table-md">
                                <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">ABREVIATURA</th>
                                    <th scope="col">NOMBRE</th>
                                    <th scope="col" colspan="3"></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tbody>
                                {% for arrRuta in arrRutas %}
                                    <tr>
                                        <td>{{ arrRuta.id }}</td>
                                        <td>{{ arrRuta.nombreCompleto }}</td>
                                        <td>{{ arrRuta.Abrebiatura }}</td>
                                        <td>
                                            <a href="{{ path('ruta_detalle', {'id':arrRuta.id}) }}" class="btn" title="InformaciÃ³n del registro">
                                                <img class="icon" src="https://img.icons8.com/nolan/40/view-details.png"/>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('ruta_editar', {'id':arrRuta.id}) }}" class="btn" title="Editar del registro">
                                                <img class="icon" src="https://img.icons8.com/nolan/40/edit--v1.png"/>
                                            </a>
                                        </td>
                                        <td>
                                            <form method="post" action="{{ path('ruta_eliminar', {'id': arrRuta.id}) }}"
                                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ arrRuta.id) }}">
                                                <button  class="btn" title="Borrar registro">
                                                    <img class="icon" src="https://img.icons8.com/nolan/40/delete.png"/>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
